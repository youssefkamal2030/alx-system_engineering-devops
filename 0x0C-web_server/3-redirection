#!/bin/bash

# Update package list and install Nginx
sudo apt update
sudo apt install -y nginx

# Create the redirection configuration
REDIRECT_CONFIG="server {
    listen 80;
    server_name _;
    
    location /redirect_me {
        return 301 http://www.example.com;
    }
}"

# Apply the configuration by replacing the default site configuration with our custom configuration
echo "$REDIRECT_CONFIG" | sudo tee /etc/nginx/sites-available/default > /dev/null

# Restart Nginx to apply the changes
sudo service nginx restart
